.price_content{width:100%; height:100%; display:inline-block; position:relative; background:url("/img/shop.jpg");}
.price_content .cont{position:absolute; width:100%; height:auto;}
.ult{margin-top:110px; width:100%;}
.li{margin-top:30px; display:inline-block; width:26%; background:rgba(0,0,0,0.5); color:#ffffff; border-radius:5px; border:1px solid #ffffff; margin-left:3%; text-align:center;}
.ul li:first-child{font-size:32px; position:relative; top:0; left:0; background:#ff2469; border-top-right-radius:5px; border-top-left-radius:5px; padding:8px 0;}
.ul li+li{padding:10px 0; font-size:24px;}
